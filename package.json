{
  "name": "@smsshcss/root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check . && turbo lint",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "type-check": "turbo type-check",
    "prepare": "husky",
    "preinstall": "npx only-allow yarn",
    "clean:all": "yarn clean && rm -rf .turbo .yarn/cache",
    "clean:install": "yarn clean:all && yarn install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ],
    "*.{json,md}": [
      "yarn prettier --write"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8.4.35",
    "prettier": "^3.0.0",
    "tsup": "^8.0.2",
    "turbo": "^1.10.16",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  },
  "workspaces": [
    "packages/*",
    "packages/@smsshcss/*",
    "packages/@smsshcss/cli/*",
    "playground/*"
  ],
  "volta": {
    "node": "20.18.0",
    "yarn": "4.5.0"
  },
  "packageManager": "yarn@4.5.0"
}
