{
  "name": "smsshcss-cli",
  "version": "1.0.3",
  "description": "SmsshCSS CLI",
  "main": "dist/index.js",
  "bin": {
    "smsshcss": "./bin/smsshcss.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --tsconfig tsconfig.json && mkdir -p dist/templates && cp src/templates/* dist/templates/",
    "dev": "tsup src/index.ts --format cjs --watch --tsconfig tsconfig.json && mkdir -p dist/templates && cp src/templates/* dist/templates/",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "css",
    "cli",
    "config",
    "smsshcss"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.5.0"
}
