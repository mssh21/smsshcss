{
  "name": "smsshcss-postcss",
  "version": "1.0.1",
  "description": "PostCSS plugin for smsshcss to generate CSS only for classes used in HTML",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "smsshcss": "^1.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "postcss": "^8.4.35",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "postcss",
    "postcss-plugin",
    "css",
    "utility",
    "smsshcss"
  ]
}
