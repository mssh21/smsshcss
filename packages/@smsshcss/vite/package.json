{
  "name": "@smsshcss/vite",
  "version": "2.2.0",
  "description": "Vite plugin for SmsshCSS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --external vite,smsshcss && cp src/index.d.ts dist/",
    "dev": "tsup src/index.ts --format esm --external vite,smsshcss --watch && cp src/index.d.ts dist/",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:unit": "vitest run src/__tests__/plugin.test.ts src/__tests__/utility-classes.test.ts",
    "test:integration": "vitest run src/__tests__/integration.test.ts src/__tests__/custom-values.test.ts",
    "test:debug": "vitest run --reporter=verbose --bail=1",
    "lint:test": "eslint 'src/__tests__/**/*.ts'"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "smsshcss": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/ui": "^0.34.6",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "vite": "^5.0.0"
  }
}
