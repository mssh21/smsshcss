{
  "name": "smsshcss",
  "version": "1.0.0",
  "description": "A utility-first CSS framework for rapid UI development",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && cp src/reset.css dist/",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch && cp src/reset.css dist/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./reset.css": "./dist/reset.css"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "css",
    "utility",
    "framework"
  ]
}
