{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist",
    "baseUrl": "../",
    "paths": {
      "~/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["./**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "types": ["node"]
    }
  }
}
